<div>
    <main class="tlp-framed-vertically">
        <div class="breadcrumb-item">
            <a href="/project/{{project_id}}/news" class="breadcrumb-link router-link-active">
                <i class="breadcrumb-link-icon fa fa-newspaper-o"></i> <span>News</span>
            </a>
        </div>
        <div class="breadcrumb-item">
            <a class="breadcrumb-link router-link-exact-active router-link-active fa fa-edit"> {{title}}</a>
        </div>

        <!--<h1 class="tlp-framed-horizontally">{{title}}</h1>-->
        <div class="tlp-framed-horizontally">
            <section class="tlp-pane">
                <div class="tlp-pane-container">
                    <section class="tlp-pane-section">
                        <form action="/project/{{project_id}}/news" method="post">
                            <div class="tlp-form-element">
                                <label class="tlp-label" for="title">Titre</label>
                                <input type="text" class="tlp-input" id="title" name="title" placeholder="saisir un titre" value="">
                            </div>

                            <div class="tlp-form-element">
                                <label class="tlp-label" for="content">Description</label>
                                <textarea type="text" class="tlp-textarea" id="content" name="content" placeholder="saisir du contenu"></textarea>
                            </div>

                            <div class="tlp-form-element">
                                <label class="tlp-label" for="area-adjusted">Promotion</label>
                                <div class="tlp-switch">
                                    <input type="checkbox" id="toggle" class="tlp-switch-checkbox">
                                    <label for="toggle" class="tlp-switch-button" aria-hidden="false"></label>
                                </div>
                                <p class="tlp-text-info">
                                    <i class="fa fa-life-saver"></i>
                                    Demander la promotion en premi√®re page de Tuleap ?
                                </p>
                            </div>

                            <div class="tlp-form-element">
                                <label class="tlp-label" for="area-adjusted">Publique</label>
                                <div class="tlp-form-element">
                                    <div class="tlp-switch">
                                        <input type="checkbox" id="toggle_public" class="tlp-switch-checkbox">
                                        <label for="toggle_public" class="tlp-switch-button" aria-hidden="false"></label>
                                    </div>
                                    <p class="tlp-text-info">
                                        <i class="fa fa-life-saver"></i>
                                        Visible par tous ou seulement par les membres du projet !
                                    </p>
                                </div>
                            </div>

                            <div class="tlp-form-element">
                                <label class="tlp-label" for="types-adjusted">Partage</label>
                                <select class="tlp-select tlp-select-adjusted" id="types-adjusted" name="types[]" multiple>
                                    <option value="project_member">membre du projet</option>
                                    <option value="project_admin">admin du  projet</option>
                                    <option value="users">utilisateurs</option>
                                    <option value="files_admin">gestionnaire fichier</option>
                                    <option value="wiki_admin">admin wiki</option>
                                    <option value="news_admin">admin d'annonce</option>
                                </select>
                            </div>

                            <button type="submit" class="tlp-button-primary">
                                Valider
                            </button>
                        </form>
                    </section>
                </div>
            </section>
        </div>
    </main>
</div>
